<h1>This is listings show page</h1>

<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="<%=@listing.game.cover.url %>" class="img-fluid rounded-start" alt="game-cover-img">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @listing.game.name %></h5>
        <p class="card-text"><%= @listing.description %></p>
        <p class="card-text">Rental Price: $<%= @listing.price %></p>
        <p class="card-text"><small class="text-muted">Maximum Rental Period: <%= @listing.max %> days</small></p>
      </div>
    </div>
  </div>
</div>
