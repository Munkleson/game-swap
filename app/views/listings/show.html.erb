<h1 class="text-center m-5"><%= @listing.game.name %></h1>
<div class="d-flex justify-content-center">
  <div class="card m-1" style="max-width: 1000px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="<%=@listing.game.cover.url %>" class="img-fluid" alt="game-cover-img">
      </div>
      <div class="col-md-8">
        <div class="card-body d-flex flex-column">
          <div class="m-3">
            <p class="card-text">Game Title: <%= @listing.game.name %></p>
            <p class="card-text">Description: <%= @listing.description %></p>
            <p class="card-text">Rental Price: $ <%= @listing.price %></p>
            <p class="card-text">Maximum Rental Period: <%= @listing.max %> days</p>
          </div>
          <hr>
          <div class = "m-3">
            <p class="card-text">Game Owner: <%= @listing.user.username %></p>
          </div>
          <div data-controller="create-offer">
            <button class="create-offer-button btn btn-primary m-3"
                    data-action="click->create-offer#renderForm">
                    Rent this game
            </button>
            <%= render "create_offer" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="m-5">
  <%= link_to "Back", "/", class:"btn btn-primary mt-auto" %>
</div>
