<div class="container mt-3">
  <h1 class="text-center title"><%= @listing.game.name %></h1>
  <div class="row">
    <% if @offers.any? %>
      <% @offers.each do |offer| %>
        <div class="col-md-6 col-lg-4"> <!-- Ensures 2 cards per row on medium screens, 3 on large -->
          <div class="card shadow-sm mt-3 p-3">
            <div class="d-flex justify-content-between">
              <div>
                <p>Start Date: <%= offer.start_date %></p>
                <p>End Date: <%= offer.start_date + @listing.max %></p>
              </div>
              <div>
                <p>Offer: <%= offer.price %></p>
                <p>From <%= offer.user.email %></p>
              </div>
            </div>
            <p>Comments: <%= offer.comments %></p>
            <% if offer.pending? %>
              <div class="d-flex">
                <%= simple_form_for offer do |f| %>
                  <%= f.input :status, as: :hidden, input_html: { value: "accepted" } %>
                  <%= f.submit "Accept", class: "btn-accept" %>
                <% end %>
                <%= simple_form_for offer do |f| %>
                  <%= f.input :status, as: :hidden, input_html: { value: "rejected" } %>
                  <%= f.submit "Reject", class: "btn-reject mx-3" %>
                <% end %>
              </div>
            <% else %>
              <p>Offer status: <strong><%= offer.status.capitalize %></strong></p>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-12">
        <h2 class="mt-3 text-center">No offers for this listing</h2>
      </div>
    <% end %>
  </div>
</div>
