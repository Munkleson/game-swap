<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @listing.game.cover.url %>')">
  <h1>
    <%= @listing.game.name %>
  </h1>
</div>
<div class="container my-5">
  <div class="row">
    <% if @offers.any? %>
      <% @offers.each do |offer| %>
        <div class="col-md-6 d-flex mt-3">
          <div class="card shadow-sm mt-3 p-3 h-100 w-100 d-flex flex-column">
            <div class="d-flex justify-content-between">
              <div class="text-start">
                <p>Start: <%= offer.start_date %></p>
                <p>End: <%= offer.start_date + @listing.max %></p>
              </div>
              <div class="text-end">
                <h3>Offer: <%= number_to_currency(offer.price, unit: "Â¥", format: "%u%n") %></h3>
                <p>From <%= offer.user.email %></p>
              </div>
            </div>
            <div class="card card-body shadow-sm">
              <p><%= offer.comments %></p>
            </div>
            <% if offer.pending? %>
              <div class="mt-auto d-flex">
                <%= simple_form_for offer do |f| %>
                  <%= f.input :status, as: :hidden, input_html: { value: "accepted" } %>
                  <%= f.submit "Accept", class: "btn-accept" %>
                <% end %>
                <%= simple_form_for offer do |f| %>
                  <%= f.input :status, as: :hidden, input_html: { value: "rejected" } %>
                  <%= f.submit "Reject", class: "btn-reject mx-3" %>
                <% end %>
              </div>
            <% else %>
              <p class="mt-3">Offer status: <strong class="status"><%= offer.status.capitalize %></strong></p>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-12">
        <h2 class="mt-3 text-center">No offers for this listing</h2>
      </div>
    <% end %>
  </div>
</div>
