<div class="sidebar-container d-flex" data-controller="chats">
  <div class="sidebar">
    <% @chats.each do |chat| %>
      <button class="sidebar-btn">
        <p><%= chat.first_user_id == current_user.id ? User.find(current_user.id).username : User.find(chat.second_user_id).username %></p>
      </button>
    <% end %>
  </div>
</div>
