<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=arrow_downward" />

<div class="chats-view-container d-flex flex-column">
  <%= render "shared/navbar" %>
  <%= render "shared/flashes" %>

  <div class="chats-container d-flex" data-controller="chats">
    <div class="chats-sidebar-container d-flex" data-chats-target="chatsSidebar">
      <%= render "chats" %>
    </div>

    <div class="messages-container d-flex flex-column" data-chats-target="messagesSection">
      <% if @selected_chat_id %>
        <%= render "redirect_from_offers" %>
      <% end %>
    </div>
  </div>

  <%= render 'shared/footer' %>
</div>
